{
  "$schema": "https://code.claude.com/settings-schema.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-format-nix.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Read",
      "Write",
      "Skill(commit-message)",
      "Skill(nixos-rebuild)",
      "Skill(flake-update)",
      "Skill(pre-commit-check)",
      "Skill(diagnose)",
      "Skill(emergency-rollback)"
    ],
    "ask": [
      "Bash"
    ],
    "deny": []
  }
}
