{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-format-nix.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cd *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(git add *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git -C * status)",
      "Bash(grep *)",
      "Bash(nix eval *)",
      "Bash(nix flake check *)",
      "Bash(nix flake show *)",
      "Bash(nix flake update *)",
      "Bash(nix hash *)",
      "Bash(nix-instantiate *)",
      "Bash(nixos-rebuild build *)",
      "Edit",
      "Glob",
      "Grep",
      "Read",
      "Skill(commit-message)",
      "Skill(diagnose)",
      "Skill(emergency-rollback)",
      "Skill(flake-update)",
      "Skill(nixos-rebuild)",
      "Skill(pre-commit-check)",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "ask": [
      "Bash(curl *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(nixos-rebuild switch *)",
      "Bash(wget *)"
    ],
    "deny": []
  }
}
