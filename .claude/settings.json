{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-format-nix.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(nix build *)",
      "Bash(nix eval *)",
      "Bash(nix flake check *)",
      "Bash(nix flake show *)",
      "Bash(nix flake update *)",
      "Bash(nix hash *)",
      "Bash(nix repl *)",
      "Bash(nix search *)",
      "Bash(nix-build *)",
      "Bash(nix-instantiate *)",
      "Bash(nix-shell *)",
      "Bash(nixfmt *)",
      "Bash(nixos-rebuild build *)",
      "Bash(statix *)",
    ],
    "deny": [
      "Bash(nixos-rebuild switch *)",
      "Bash(sudo nixos-rebuild build *)",
      "Bash(sudo nixos-rebuild switch *)"
    ]
  }
}
